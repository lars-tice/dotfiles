# Ghostty Configuration (macOS)

# Opacity - 0.85 for slight transparency
background-opacity = 0.85

# Theme - Tokyo Night
theme = tokyonight

# Font Configuration
# Using JetBrains Mono Nerd Font for icons and glyphs
font-family = JetBrainsMonoNerdFontMono-Regular
font-size = 14

# macOS-specific Window Configuration
macos-titlebar-style = native

# macOS option key behavior
macos-option-as-alt = true

# Additional recommended settings
cursor-style = block
cursor-style-blink = true

# Window padding for better aesthetics
window-padding-x = 8
window-padding-y = 8

# Enable font ligatures if JetBrains Mono supports them
font-feature = liga
font-feature = calt

# Scrollback
scrollback-limit = 10000

# Copy on select
copy-on-select = true

# Smart tmux attach - attaches to most recent session or creates new
# Prevents nested tmux sessions when launching Ghostty from within tmux
command = ~/.local/bin/tmux-smart-attach

# macOS keybindings (Cmd key)
keybind = cmd+plus=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size
# Also support cmd+= (no shift needed for plus)
keybind = cmd+equal=increase_font_size:1

# Open new window without tmux (for tools like Claude Code that need full scrollback)
keybind = cmd+shift+n=new_window:/bin/bash