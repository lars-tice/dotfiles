# Ghostty Configuration

# Opacity - 0.85 for slight transparency
background-opacity = 0.85

# Theme - Tokyo Night
theme = tokyonight

# Font Configuration
# Using JetBrains Mono Nerd Font for icons and glyphs
font-family = JetBrainsMonoNerdFontMono-Regular
font-size = 14

# Window Configuration
# Platform-specific titlebar settings are in @macos/@linux configs

# Additional recommended settings
cursor-style = block
cursor-style-blink = true

# Window padding for better aesthetics
window-padding-x = 8
window-padding-y = 8

# Enable font ligatures if JetBrains Mono supports them
font-feature = liga
font-feature = calt

# Scrollback
scrollback-limit = 10000

# Copy on select
copy-on-select = true

# Cross-platform settings with fallbacks
# Note: Platform-specific overrides are handled by @macos/@linux stow packages

# Default tmux command (works on most Linux systems)
# This will be overridden by platform-specific configs
command = tmux new-session -A -s main

# Cross-platform keybindings (Ctrl for Linux, Cmd for macOS)
# Default to Ctrl bindings (Linux/Windows style)
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+0=reset_font_size
keybind = ctrl+equal=increase_font_size:1