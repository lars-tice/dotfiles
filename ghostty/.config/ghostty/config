# Ghostty Configuration

# Opacity - 0.85 for slight transparency
background-opacity = 0.85

# Theme - Tokyo Night
theme = TokyoNight

# Font Configuration
# Using JetBrains Mono Nerd Font for icons and glyphs
font-family = JetBrainsMonoNerdFontMono-Regular
font-size = 14

# Window Configuration
# Use native titlebar without tabs (we'll use tmux for multiplexing)
macos-titlebar-style = native

# Additional recommended settings
cursor-style = block
cursor-style-blink = true

# Window padding for better aesthetics
window-padding-x = 8
window-padding-y = 8

# Enable font ligatures if JetBrains Mono supports them
font-feature = liga
font-feature = calt

# Scrollback
scrollback-limit = 10000

# Copy on select
copy-on-select = true

# macOS specific settings
macos-option-as-alt = true

# Start tmux automatically when Ghostty opens
command = tmux new-session -A -s main

# Font size keybindings
keybind = cmd+plus=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size
# Also support cmd+= (no shift needed for plus)
keybind = cmd+equal=increase_font_size:1