# Ghostty Configuration

# Opacity - 0.85 for slight transparency
background-opacity = 0.85

# Theme - Tokyo Night
theme = TokyoNight

# Font Configuration
# Using JetBrains Mono Nerd Font for icons and glyphs
font-family = JetBrainsMonoNerdFontMono-Regular
